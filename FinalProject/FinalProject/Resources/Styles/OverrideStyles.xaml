<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui">

    <Style TargetType="mdc:Label" BasedOn="{StaticResource DefaultLabelStyle}">
        <Setter Property="ForegroundColor" Value="{StaticResource SurfaceColor}" />
    </Style>

    <Style x:Key="LargeLabel" TargetType="mdc:Label" BasedOn="{StaticResource DefaultLabelStyle}">
        <Setter Property="ForegroundColor" Value="{StaticResource PrimaryContainerColor}" />
        <Setter Property="FontWeight" Value="700" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Padding" Value="6, 3" />
    </Style>

    <Style x:Key="HeaderLabelStyle" TargetType="mdc:Label" BasedOn="{StaticResource DefaultLabelStyle}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="ForegroundColor" Value="{StaticResource SecondaryContainerColor}" />
    </Style>
</ResourceDictionary>
