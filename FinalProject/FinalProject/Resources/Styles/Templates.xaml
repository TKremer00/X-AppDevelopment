<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:observableModels="clr-namespace:FinalProject.Core.ObservableModels;assembly=FinalProject.Core"
    xmlns:mdc="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui">

    <DataTemplate x:DataType="observableModels:ObservablePlant" x:Key="ObservablePlantTemplate">
        <Grid VerticalOptions="Center" BackgroundColor="{Binding BackgroundColor, FallbackValue={StaticResource TransparentColor}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="41" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Margin="5,0,0,0" StrokeThickness="0" StrokeShape="RoundRectangle 30">
                <Image Source="{Binding Plant.ImageUrl, FallbackValue=https://cdn-icons-png.flaticon.com/512/45/45777.png}"
                       Grid.Column="0"
                       HeightRequest="36"
                       WidthRequest="36"/>
            </Border>

            <Label Grid.Column="1" 
                       Margin="-41, 0, 0, 0" 
                       HorizontalTextAlignment="Center" 
                       VerticalOptions="Center" 
                       Text="{Binding Plant.PlantName}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
